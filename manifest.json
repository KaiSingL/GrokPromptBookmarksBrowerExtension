{
	"manifest_version": 3,
	"name": "Stream",
	"version": "1.0",
	"description": "Adds a PromptList button to grok.com chat to view user message previews",
	"content_scripts": [
		{
			"matches": ["https://grok.com/*"],
			"js": ["content.js"],
			"run_at": "document_idle"
		}
	],
	"action": {
		"default_icon": {
			"16": "icons/icon-16.png",
			"32": "icons/icon-32.png",
			"192": "icons/icon-192.png",
			"512": "icons/icon-512.png"
		}
	},
	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png",
		"192": "icons/icon-192.png",
		"512": "icons/icon-512.png"
	}
}
